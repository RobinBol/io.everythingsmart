{
  "name": {
    "en": "Everything Presence Lite"
  },
  "class": "sensor",
  "capabilities": ["measure_luminance", "alarm_motion"],
  "platforms": ["local"],
  "connectivity": ["lan"],
  "discovery": "everything-presence-lite",
  "images": {
    "small": "{{driverAssetsPath}}/images/small.jpg",
    "large": "{{driverAssetsPath}}/images/large.jpg",
    "xlarge": "{{driverAssetsPath}}/images/xlarge.jpg"
  },
  "energy": {
    "approximation": {
      "usageConstant": 1
    }
  },
  "pair": [
    {
      "id": "info",
      "navigation": { "next": "list_my_devices" }
    },
    {
      "id": "list_my_devices",
      "template": "list_devices",
      "navigation": { "next": "add_my_devices" }
    },
    {
      "id": "add_my_devices",
      "template": "add_devices"
    }
  ]
}
